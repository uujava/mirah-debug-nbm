  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>nbm-maven-plugin</artifactId>
          <version>3.13.3</version>
          <extensions>true</extensions>
          <configuration>
            <brandingToken>${brandingToken}</brandingToken>
            <cluster>${brandingToken}</cluster>
            <forcedVersion>${netbeans.version}</forcedVersion>
            <netbeansInstallDirectory>${nb.installation}</netbeansInstallDirectory>
            <!--<netbeansInstallation>${nb.installation}</netbeansInstallation>-->
            <additionalArguments>${nbm.run.arguments}</additionalArguments>
            <keystore>${nbm.sign.keystore}</keystore>
            <keystorealias>${nbm.sign.keystorealias}</keystorealias>
            <keystorepassword>${nbm.sign.keystorepassword}</keystorepassword>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-jar-plugin</artifactId>
          <version>2.4</version>
          <configuration>
            <useDefaultManifestFile>true</useDefaultManifestFile>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.0</version>
          <configuration>
            <source>1.6</source>
            <target>1.6</target>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-install-plugin</artifactId>
          <version>2.4</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>

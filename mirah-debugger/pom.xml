			<groupId>org.netbeans.api</groupId>
			<artifactId>org-netbeans-modules-parsing-api</artifactId>
			<version>${netbeans.version}</version>
			<!--<version>RELEASE81</version>-->
		</dependency>
		<!--        <dependency>
            <groupId>org.netbeans.api</groupId>
            <artifactId>org-netbeans-modules-parsing-api</artifactId>-->
		<!--<version>${netbeans.version}</version>-->
		<!--            <version>RELEASE81</version>
            <scope>provided</scope>
        </dependency>-->
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-netbeans-modules-parsing-indexing</artifactId>
			<version>${netbeans.version}</version>
			<!--<version>RELEASE81</version>-->
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-netbeans-modules-java-source-compat8</artifactId>
			<version>RELEASE82</version>
			<scope>provided</scope>
			<type>nbm</type>
		</dependency>
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-openide-util</artifactId>
			<version>RELEASE802</version>
			<!--<scope>runtime</scope>-->
		</dependency>
